#!/bin/bash -e

mb=/z/int/muscle_benchmark2

accs=$res/muscle_benchmark/accs/bbs
testdir=$mb/foldmason_bbs
refdir=$mb/bbs_ref_msas

if [ ! -s $accs ] ; then
	echo Not found accs=$accs >> /dev/stderr
	exit 1
fi

if [ ! -d $testdir ] ; then
	echo Not found testdir=$testdir >> /dev/stderr
	exit 1
fi

if [ ! -d $refdir ] ; then
	echo Not found refdir=$refdir >> /dev/stderr
	exit 1
fi

mkdir -p ../qscore_bbs

muscle \
  -qscoredir $accs \
  -testdir $testdir \
  -refdir $refdir \
  -bysequence \
  -output ../qscore_bbs/foldmason
