#!/bin/bash

bench=$1
algo=muscle5_aa2

if [ x$bench == x ] ; then
	echo Missing arg
	exit 1
fi

root_dir=/z/int/muscle_benchmark/
root_dir2=/z/int/muscle_benchmark2/

fa_dir=$root_dir/input_fastas/$bench

if [ ! -d $fa_dir ] ; then
	echo Not found fa_dir=$fa_dir
	exit 1
fi

out_dir=$root_dir2/output_msas/$bench/$algo
mkdir -p $out_dir

for acc in `cat $res/muscle_benchmark/accs/$bench`
do
	echo $acc
	fa=$fa_dir/$acc
	if [ ! -s $fa ] ; then
		echo Not found fa=$fa
		exit 1
	fi

	muscle \
	  -align $fa \
	  -quiet \
	  -output $out_dir/$acc
done
