#!/bin/bash -e

bench=$1
algo=$2
acc=$3

mb=/z/int/muscle_benchmark

lddtfm=$src/pylddt/src/lddt_foldmason.py

if [ ! -s $lddtfm ] ; then
	echo Not found lddtfm=$lddtfm
	exit 1
fi

testmsa=$mb/output_msas/$bench/$algo/$acc
files=$mb/list_files/$bench/$acc.files

if [ ! -s $testmsa ] ; then
	echo Not found testmsa=$testmsa >> /dev/stderr
	exit 1
fi

if [ ! -s $files ] ; then
	echo Not found files=$files >> /dev/stderr
	exit 1
fi

outdir=$res/muscle_benchmark/lddtfm
mkdir -p $outdir

cd $mb

$lddtfm \
  --msa $testmsa \
  --pdbfiles $files \
  > $outdir/$bench.$acc

tail -n1 $outdir/$bench.$acc
